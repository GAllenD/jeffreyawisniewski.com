@using System.Web.Mvc.Html5
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Jeffrey A Wisniewski - Actor | EMC</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/jquery.lightbox-0.5.css")" rel="stylesheet" type="text/css" />
    
    </head>

    <body>
        <div id="Main_Container">
            <header id="Header_Container">
                <div id="Logo">
                    <img src="@Url.Content("~/Content/images/logo.gif")"/>
                </div>
                <nav id="Navigation">
                    @Html.ActionLink("bio","Index","Bio")
                    <a href="@Url.Content("~/Content/Media/JeffreyAWisniewski_Resume.pdf")" target="_blank">resume</a>
                    @Html.ActionLink("gallery","Index","Gallery")
                    @Html.ActionLink("film","Index","Video")
                    @Html.ActionLink("voice","Index","Voice")
                    @Html.ActionLink("press","Index","Press") 
                    @Html.ActionLink("contact","Index","Contact")
                </nav>
            </header>
            <div id="Content_Container">
                @RenderBody()       
            </div>
            <footer id="Footer_Container">
                © 2013, Jeffrey A. Wisniewski.  Redistribution or use of works without permission is strictly prohibited.
            </footer>
        </div>
    </body>
    
    <script src="@Url.Content("~/Content/Scripts/jquery-1.8.2.js")" type="text/javascript"></script> 
    <script src="@Url.Content("~/Content/Scripts/jquery.tinyscrollbar.min.js")" type="text/javascript"></script> 
    <script src="@Url.Content("~/Content/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    @RenderSection("ScriptIncludes", false)
    
    
</html>
